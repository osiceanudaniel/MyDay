<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:theme="@style/MyThemeActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            android:theme="@style/MyCustomMainTheme"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/the_blacksmith"
                    android:text="@string/randomBgText"
                    android:textColor="#0DFFFFFF"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/usernameMainActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/secondCircleImageViewMain"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/veteran_typewriter"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="35dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/secondCircleImageViewMain"
                    android:layout_width="124dp"
                    android:layout_height="123dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/image_stroke" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewMain"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="11dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/profile" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarId"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:clickable="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <TextView
        android:id="@+id/noNotesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/circleImageViewMain"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text=""
        android:clickable="false"
        android:textColor="#cccccc"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/loadingTextViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        android:text="@string/loadingText"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingTop="360dp"/>
    <ProgressBar
        android:id="@+id/progressBarId"
        android:layout_gravity="center"
        android:layout_width="130dp"
        android:layout_height="130dp" />

</android.support.design.widget.CoordinatorLayout>


