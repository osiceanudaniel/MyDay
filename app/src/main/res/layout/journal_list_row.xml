<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:clickable="true">

        <TextView
            android:id="@+id/dataCardViewTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="TEST DE"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textCardViewId"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageCardViewId"
                android:layout_gravity="left"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#C4C4C4"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/deleteNoteId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textCardViewId"
                android:layout_alignRight="@+id/textCardViewId"
                android:layout_below="@+id/textCardViewId"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:src="@drawable/ic_delete_forever"
                android:foreground="?attr/selectableItemBackground"
                android:background="@null" />

            <ImageButton
                android:id="@+id/editNoteId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/deleteNoteId"
                android:padding="6dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_toLeftOf="@+id/deleteNoteId"
                android:layout_toStartOf="@+id/deleteNoteId"
                android:background="@null"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/imageCardViewId"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="centerCrop"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/no_thumbnail" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/square_image_stroke"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:background="@drawable/notes_underline"/>

    </LinearLayout>

</android.support.v7.widget.CardView>