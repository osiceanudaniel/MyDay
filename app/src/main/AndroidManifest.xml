<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.osiceanudaniel.jurnal">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:name=".MyDay"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPageActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JournalActivity"
            android:label="@string/journalPageName"
            android:parentActivityName=".MainPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyThemeActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".ProfileEditActivity"
            android:label="@string/journalPageName"
            android:parentActivityName=".MainPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyThemeActionBar" />
        <activity
            android:name=".EditNoteActivity"
            android:label="@string/editNotePageName"
            android:parentActivityName=".MainPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyThemeActionBar" />

        <activity android:name=".SetNotificationTimeActivity"
                  android:parentActivityName=".MainPageActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/MyTheme"/>

        <receiver android:name=".Notification_receiver" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>